---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout 
title="Dankesseite Juri Lorenz | Web-Entwicklung & KI-Integration | maxWapp" 
seoTitle={"Dankesseite | Web-Entwicklung in München | maxWapp"} 
seoDesc={"Erfahren Sie mehr über Juri Lorenz, den Web- und App-Entwickler hinter maxWapp. Spezialisiert auf WordPress, React und Astra-Entwicklung."}
>
  <!-- Hintergrund mit Verlauf -->
  <div class="min-h-screen bg-gradient-to-b from-[#090a1a] to-[#290065] text-white text-center flex flex-col items-center justify-center">
    
<!-- Title -->
<h1 class="text-center text-4xl md:text-6xl font-bold text-gray-100 drop-shadow-lg mt-2 md:my-24 mx-4">
  Vielen Dank für deine Nachricht!
</h1>

<div class="flex flex-col items-center md:flex-row md:justify-center md:items-center md:space-x-32 mt-12">
  <!-- Profile Picture with Gradient Border and Shadow -->
  <div class="rounded-full p-1 bg-gradient-to-r from-purple-400 to-blue-500 shadow-md drop-shadow-[-35px_0px_35px_rgba(75,0,130,0.6)] profile-container">
    <div class="rounded-full bg-[#090a1a] p-0">
      <img src="/images/juri-lorenz-foto.webp" class="rounded-full w-48 h-48 md:w-56 md:h-56 object-cover" alt="Juri Lorenz" />
    </div>
  </div>

  <!-- Motto Text beside the Image -->
  <div class="text-center md:text-left md:pl-12 mt-6 md:mt-0">
    <p class="text-2xl md:text-2xl font-medium text-gray-300">
      <span>Deine Nachricht</span><br />
      <span>ist auf dem Weg.</span>
    </p>

    <!-- Main Motto -->
    <p class="mt-4 text-3xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500 leading-[1.2] pb-4">
      <span>Ich melde mich</span><br />
      <span>ganz bald bei dir!</span>
    </p>
  </div>
</div>


  </div>
</MainLayout>

<style>
  .text-gradient {
    background: linear-gradient(to right, #9c27b0, #03a9f4);
    -webkit-background-clip: text;
    color: transparent;
  }


  .drop-shadow-lg {
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.2));
  }

  .border-gradient-to-r {
    border-image-slice: 1;
    border-image-source: linear-gradient(to right, #9c27b0, #03a9f4);
  }

    /* Container for the entire image, gradient, and shadow */
    .profile-container {
    transform: translateX(-150%); /* Start off-screen to the left */
    opacity: 0; /* Initially hidden */
    transition: transform 1.5s ease-out, opacity 1.5s ease-out;
  }

  /* Trigger the animation when the page loads */
  .profile-container {
    animation: flyInFromLeft 1.5s forwards;
  }

  /* Keyframes for the fly-in effect */
  @keyframes flyInFromLeft {
    0% {
      transform: translateX(-150%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Container for the entire image and shadow */
  .phone-container {
    transform: translateX(-150%); /* Start off-screen to the left */
    opacity: 0; /* Initially hidden */
    transition: transform 1.5s ease-out, opacity 1.5s ease-out; /* Remove delay for mobile */
  }

  /* Fly in effect */
  .fly-in {
    transform: translateX(0);
    opacity: 1;
  }

  /* Keyframes for desktop (initial load) */
  @media (min-width: 768px) {
    .phone-container {
      animation: flyInFromLeftPhone 1.5s forwards 0.5s; /* Keep delay on desktop */
    }

    .underline-animation {
    display: inline-block;
    background-image: linear-gradient(120deg, #03a9f4, #9c27b0);
    background-repeat: no-repeat;
    background-size: 100% 3px;
    background-position: 0 88%;
    transition: background-size 0.3s ease-in-out;
  }

  .underline-animation:hover {
    background-size: 100% 100%;
  }

  }

  /* Keyframes for mobile (on scroll) */
  @keyframes flyInFromLeftPhone {
    0% {
      transform: translateX(-150%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Initial state for the second phone container */
.phone-container-second {
  transform: translateX(-150%); /* Positioned off-screen to the left */
  opacity: 0; /* Initially hidden */
  transition: transform 1.5s ease-out, opacity 1.5s ease-out;
}

/* Fly-in effect when in view */
.fly-in-second {
  transform: translateX(0); /* Return to original position */
  opacity: 1; /* Fully visible */
}

</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const phoneImage = document.querySelector('.phone-container');

    // Detect if the element is in view for mobile
    function isInViewPort(element) {
      const rect = element.getBoundingClientRect();
      return (
        rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
        rect.bottom >= 0
      );
    }

    // Add event listener for scroll to trigger the animation
    window.addEventListener('scroll', function() {
      if (window.innerWidth < 768) { // Only apply for mobile view
        if (isInViewPort(phoneImage)) {
          phoneImage.classList.add('fly-in');
        }
      }
    });
  });

  document.addEventListener('DOMContentLoaded', function() {
  const secondPhoneImage = document.querySelector('.phone-container-second');

  // Function to check if the element is in the viewport
  function isInViewPort(element) {
    const rect = element.getBoundingClientRect();
    return (
      rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
      rect.bottom >= 0
    );
  }

  // Function to add the fly-in class when in view
  function handleScroll() {
    if (isInViewPort(secondPhoneImage)) {
      secondPhoneImage.classList.add('fly-in-second');
    }
  }

  // Add scroll event listener
  window.addEventListener('scroll', handleScroll);

  // Run on page load in case the element is already in view
  handleScroll();
});
</script>