---
import MainLayout from "../../layouts/MainLayout.astro"
import IpadComponent from "../../components/IpadComponent.astro"

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Branding & Printdesign",
  "description": "Ich entwickle starkes CI – mit Logo, Corporate Design und hochwertigen Printmaterialien. Für Unternehmen, die Eindruck machen wollen.",
  "image": "https://maxwapp.de/images/maxwapp-visitenkarte.webp",
  "brand": {
    "@type": "Brand",
    "name": "maxWapp"
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "EUR",
    "price": "900",
    "availability": "https://schema.org/InStock",
    "url": "https://maxwapp.de/services/branding-und-printdesign/"
  }
};
---

<MainLayout
  title="Branding & Printdesign aus München – visuell stark & strategisch durchdacht | maxWapp"
  seoTitle="Branding & Printdesign aus München – Logo & CI | maxWapp"
  seoDesc="Ich entwickle starkes CI – mit Logo, Corporate Design und hochwertigen Printmaterialien. Für Unternehmen, die Eindruck machen wollen."
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <!-- Hintergrund mit Verlauf -->
  <div
    class="min-h-screen bg-gradient-to-b from-[#090a1a] to-[#290065] text-white text-center flex flex-col items-center justify-center"
  >
    <!-- Titel -->
    <h1
      class="text-center text-3xl md:text-6xl font-bold text-gray-100 drop-shadow-lg mt-12 md:mb-12 md:mt-36"
    >
      Branding & Printdesign
    </h1>

    <div
      class="flex flex-col items-center md:flex-row md:justify-center md:items-center md:space-x-32 mt-12"
    >
      <!-- Profilbild mit Farbverlauf-Rahmen und Schatten -->
