const { title, seoTitle, seoDesc, noindex } = Astro.props;
---

<html lang="en">
  <Mainhead title={title} seoTitle={seoTitle} seoDesc={seoDesc} noindex={noindex} />
  <body class="bg-slate-900 text-white grid gap-0">
    <!-- Navigation Component -->
    <Nav />

    <!-- Main Content with padding to offset navbar height -->
    <!-- <main class="pt-16"> Add padding-top to main content -->
      <slot />
    </main>
    <!-- Footer Component -->
<!-- Footer Component -->
<div class="relative shadow-[0px_0px_35px_rgba(147,112,219,0.6)] z-10">
  <div class="absolute top-0 left-0 w-full h-[2px] bg-indigo-900"></div>
  <Footer />
</div>   
 <style>
      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(to bottom, #090a1a, #290065);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      main {
        flex-grow: 1;
      }
