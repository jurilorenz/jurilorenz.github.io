---
// FeatureCard.astro
export interface FeatureCardProps {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="relative bg-[#1b1b33] p-8 rounded-xl border border-gray-700 shadow-[0px_0px_35px_rgba(147,112,219,0.6)]">
  <div class="absolute top-0 left-0 bg-gradient-to-r from-purple-400 to-blue-500 w-full h-2 rounded-t-xl"></div>
  <h3 class="text-2xl font-semibold text-white mb-4">{title}</h3>
  <p class="text-xl text-gray-300 leading-relaxed">
    {description}
  </p>
</div>