---
// CircleImage.astro
export interface CircleImageProps {
  imgSrc: string;
  altText: string;
  title1: string;
  title2: string;
  motto1: string;
  motto2: string;
}

const { imgSrc, altText, title1, title2, motto1, motto2 } = Astro.props;
---

<div class="flex flex-col items-center md:flex-row md:justify-center md:items-center md:space-x-32 mt-12">
  <!-- Profilbild mit Farbverlauf-Rahmen und Schatten -->
  <div class="rounded-full p-1 bg-gradient-to-r from-purple-400 to-blue-500 shadow-md drop-shadow-[-35px_0px_35px_rgba(75,0,130,0.6)] profile-container">
    <div class="rounded-full bg-[#090a1a] p-0">
      <img src={imgSrc} alt={altText} class="rounded-full w-48 h-48 md:w-56 md:h-56 object-cover" />
    </div>
  </div>

  <!-- Text neben dem Bild -->
  <div class="text-center md:text-left md:pl-12 mt-6 md:mt-0">
    <p class="text-2xl md:text-2xl font-medium text-gray-300">
      <span>{title1}</span><br />
      <span>{title2}</span><br />
    </p>

    <!-- Hauptmotto -->
    <p class="mt-4 text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500 pb-2" style="line-height: 1.1;">
      <span>{motto1}</span><br />
      <span>{motto2}</span><br />
    </p>
  </div>
</div>

<style>
  /* Static styling for the profile container without animation */
  .profile-container {
    opacity: 1;
  }
</style>