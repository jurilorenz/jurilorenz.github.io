---
// HeroComponent.astro
---

<!-- Background with gradient -->
<div class="min-h-screen  text-white flex items-center justify-center md:justify-end relative overflow-hidden">

  
  <!-- Image on the left (full-screen) -->
  <div class="absolute inset-0 w-full md:w-1/2 h-full shadow-md drop-shadow-[0px_-35px_35px_rgba(0,0,0,0.6)] md:pt-[14vh] transform translate-y-[-5%] right-0 md:translate-x-0 md:translate-y-0">
    <img src="/images/home-page.webp" 
    class="hero-image w-full h-full object-cover object-top opacity-60 md:opacity-100 mask-bottom"
    alt="Juri Lorenz" 
    />
  </div>
  
      <!-- Right-side content -->
      <div class="relative w-full md:w-1/2 flex flex-col items-start p-8  md:p-16 md:pt-12 z-10 text-left mt-[22vh] md:mt-0" style="min-height: 70vh;">      
        <div class="md:absolute w-full">
  
          <!-- Subtitle with Typing Animation -->
          <div class="text-2xl md:text-2xl mb-6 md:mb-12 text-gray-300">
            <p>Hier gibt's</p>
            <div id="typed-strings">
              <p>Maximale Konversion.</p>
              <p>Schnelle Websites.</p>
              <p>Next-Level Design.</p>
              <p>Mobilfreundliche Website.</p>
              <p>Einfache Content-Pflege.</p>
              <p>Top Google-Sichtbarkeit.</p>
            </div>
            <span id="typed"></span>
          </div>

        <!-- Title -->
        <h1 class="text-5xl md:text-8xl max-w-3xl font-bold drop-shadow-lg">
          Webseiten,<br>die verkaufen
        </h1>
        
  
        <!-- List of advantages -->
        <ul class="text-lg md:text-2xl mt-6 md:mt-12 text-gray-100 space-y-2">
          <li><i class="fas fa-check text-white mr-4"></i> High-Performance Websites</li>
          <li><i class="fas fa-check text-white mr-4"></i> Fokus auf maximale Konversion</li>
          <li><i class="fas fa-check text-white mr-4"></i> Professionelle Foto-/Video</li>
          <li><i class="fas fa-check text-white mr-4"></i> Branding, Logo & Print-Design</li>
        </ul>
  
<!-- Buttons at the bottom-right -->
<div class="flex flex-col md:flex-row gap-6 mt-8 md:mt-16 justify-center md:justify-start items-center md:items-start w-full md:w-auto">


  <!-- Secondary Button -->
  <a href="/contact" class="relative inline-block py-4 px-10 rounded-full font-bold text-center w-full max-w-xs md:max-w-none md:w-auto bg-white text-[#090a1a] shadow-lg transition-all duration-300 ease-in-out hover:shadow-[0_0_20px_rgba(147,112,219,0.8),_0_0_35px_rgba(3,169,244,0.6)]">
    Let's Talk
  </a>
</div>


  
      </div>
  </div>
    </div>

    <script>
      import Typed from "typed.js";
      var typed = new Typed('#typed', {
        stringsElement: '#typed-strings',
        typeSpeed: 120,
        backSpeed: 30,
        loop: true,
      });
    </script>
    
    <style>
    
    h1 {
  line-height: 1.1; /* Adjust line height for better spacing */
  max-width: 18ch; /* Prevents awkward breaking */
}
    .hero-image {
      position: relative;
      z-index: 1;
      mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 70%, rgba(0,0,0,0));
    }
    
      body {
        font-family: 'Poppins', sans-serif;
      }
    
    </style>