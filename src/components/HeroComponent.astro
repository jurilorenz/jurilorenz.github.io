  position: relative;
  z-index: 1;
  mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, rgba(0, 0, 0, 0));
  -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 70%, rgba(0, 0, 0, 0)); /* Для Safari */
}
    
      body {
        font-family: 'Poppins', sans-serif;
