<!-- Hero Section -->
<!-- ✅ Десктопная версия -->
<div class="hidden md:flex flex-row items-center justify-between min-h-screen px-16 relative gap-x-40">

  <!-- Левая часть: Изображение (опускаем вниз) -->
  <div class="w-1/2 flex justify-end items-end mt-48">
    <img src="/images/home-page.webp" class="w-auto h-[80vh] object-cover object-top hero-image" alt="Juri Lorenz">
  </div>

  <!-- Правая часть: Контент (поднимаем вверх) -->
  <div class="w-1/2 flex flex-col items-start text-left mt-12 md:mt-0">

              <!-- Subtitle with Typing Animation -->
              <div class="text-2xl md:text-2xl mb-6 md:mb-12 text-gray-300">
                <p>Hier gibt's</p>
                <div id="typed-strings">
                  <p>schnelle Websites.</p>
                  <p>Next-Level Design.</p>
                  <p>Mobilfreundliche Websites.</p>
                  <p>Leichte Content-Pflege.</p>
                  <p>Top-Google-Sichtbarkeit.</p>
                </div>
                <span id="typed"></span>
              </div>
    
    <!-- Заголовок -->
    <h1 class="text-8xl font-bold leading-tight">
      Websites,<br> 
      <span class="text-7xl">die verkaufen</span>
    </h1>
    <!-- Список преимуществ -->
    <ul class="text-lg md:text-2xl mt-6 text-gray-100 space-y-2">
      <li><i class="fas fa-check text-white mr-4"></i> Branding, Logo & Print-Design</li>
      <li><i class="fas fa-check text-white mr-4"></i> Professionelle Fotos & Videos</li>
      <li><i class="fas fa-check text-white mr-4"></i> High-Conversion Websites</li>
    </ul>

    <!-- Кнопка (всегда видна) -->
    <div class="mt-20">
      <a href="/contact" class="py-4 px-10 rounded-full font-bold bg-white text-[#090a1a] shadow-lg transition-all duration-300 ease-in-out hover:shadow-lg">
        Let's Talk
      </a>
    </div>

  </div>
</div>


  
      </div>
  </div>
</div>
  
    <!-- ✅ Мобильная версия -->
    <div class="flex flex-col items-start text-left p-8 md:hidden">
            <!-- Заголовок (без анимации) -->
      <h1 class="text-5xl font-bold leading-tight">
        Websites,<br> 
        <span class="text-4xl">die verkaufen</span>
      </h1>
  
      <!-- Список преимуществ -->
      <ul class="text-lg mt-6 text-gray-100 space-y-2">
        <li><i class="fas fa-check text-white mr-4"></i> High-Conversion Websites</li>
        <li><i class="fas fa-check text-white mr-4"></i> Professionelle Fotos & Videos</li>
        <li><i class="fas fa-check text-white mr-4"></i> Branding, Logo & Print-Design</li>
      </ul>
  
      <div class="flex flex-col md:flex-row gap-6 mt-8 md:mt-16 justify-center md:justify-start items-center md:items-start w-full md:w-auto">


        <!-- Secondary Button -->
        <a href="/contact" class="relative inline-block py-4 px-10 rounded-full font-bold text-center w-full max-w-xs md:max-w-none md:w-auto bg-white text-[#090a1a] shadow-lg transition-all duration-300 ease-in-out hover:shadow-[0_0_20px_rgba(147,112,219,0.8),_0_0_35px_rgba(3,169,244,0.6)]">
          Let's Talk
        </a>
      </div>
  
      <!-- Изображение (расположено ниже) -->
      <div class="mt-10">
        <img src="/images/home-page.webp" class="w-full h-auto object-cover rounded-lg shadow-lg hero-image" alt="Juri Lorenz">      </div>
    </div>
  
  </div>


    <script>
      import Typed from "typed.js";
      var typed = new Typed('#typed', {
        stringsElement: '#typed-strings',
        typeSpeed: 120,
        backSpeed: 30,
        loop: true,
      });
    </script>
    
    <style>
    
    h1 {
  line-height: 1.2; /* Adjust line height for better spacing */
