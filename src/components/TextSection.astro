---
// TextSection.astro
export interface TextSectionProps {
  title: string
  introText: string
  secondText: string
}

const { title, introText, secondText } = Astro.props
---

<div
  class="w-full md:w-10/12 lg:w-8/12 mx-auto text-lg md:text-xl leading-relaxed mt-12 md:mt-12 flex flex-col items-center gap-4"
>
  <!-- Text section centered for mobile and desktop -->
  <div class="w-full text-center">
    <!-- Title with adjusted line height and centered alignment -->
    <h2 class="mb-8 text-3xl pb-2 md:text-5xl font-extrabold" style="line-height: 1.1;">
      {title}
    </h2>

    <!-- Intro and Secondary Text -->
    <p class="text-xl md:text-2xl mt-4 max-w-3xl mx-auto">
      {introText}
    </p>

    <p class="text-xl md:text-2xl mt-4 max-w-3xl mx-auto">
      {secondText}
    </p>
  </div>
</div>
