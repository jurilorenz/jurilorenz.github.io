---
// TextSection.astro
export interface TextSectionProps {
  title: string;
  introText: string;
  secondText: string;
}

const { title, introText, secondText } = Astro.props;
---

<div class="w-full md:w-10/12 lg:w-8/12 mx-auto text-lg md:text-xl text-gray-300 leading-relaxed mt-12 md:mt-12 flex flex-col items-center gap-4">
  
  <!-- Text section centered for mobile and desktop -->
  <div class="w-full text-center">
    <!-- Title with adjusted line height and centered alignment -->
    <p class="mb-8 text-3xl pb-2 md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500" style="line-height: 1.1;">
      {title}
    </p>

    <!-- Intro and Secondary Text -->
    <p class="text-xl md:text-2xl mt-4 max-w-3xl mx-auto">
      {introText}
    </p>
    
    <p class="text-xl md:text-2xl mt-4 max-w-3xl mx-auto">
      {secondText}
    </p>
  </div>
</div>