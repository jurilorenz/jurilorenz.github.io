---
// contentSection.astro
export interface ContentSectionProps {
  imgSrc: string;
  imgAlt: string;
  title: string;
  introText: string;
  secondText: string;
  reverse?: boolean; // Добавляем параметр для смены направления
}

const { imgSrc, imgAlt, title, introText, secondText, reverse = false } = Astro.props;
---

<div class={`w-full md:w-10/12 lg:w-full mx-auto text-lg md:text-xl text-gray-300 leading-relaxed mt-20 md:mt-32 flex flex-col md:flex-row ${reverse ? 'md:flex-row-reverse' : ''} items-center gap-16 md:gap-32`}>
  
<!-- Image section -->
  <div class="w-full md:w-6/12 lg:w-5/12 flex justify-center md:justify-end mb-8 md:mb-0 rounded shadow-md overflow-hidden max-w-full">
    <img src={imgSrc} alt={imgAlt} class="w-full md:w-96 lg:w-[450px] object-contain rounded-lg">
  </div>
  
  <!-- Text section -->
  <div class="w-full md:w-6/12 lg:w-7/12 text-center md:text-left">
    <p class="mb-8 pb-2 text-3xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500" style="line-height: 1.1;">
      {title}
    </p>

    <p class="text-xl md:text-2xl mt-8">
      {introText}
    </p>
    
    <p class="text-xl md:text-2xl mt-8">
      {secondText}
    </p>
  </div>
</div>