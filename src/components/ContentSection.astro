---
// contentSection.astro
export interface ContentSectionProps {
  imgSrc: string;
  imgAlt: string;
  title: string;
  introText: string;
  secondText: string;
}

const { imgSrc, imgAlt, title, introText, secondText } = Astro.props;
---

<div class="w-full md:w-10/12 lg:w-full mx-auto text-lg md:text-xl text-gray-300 leading-relaxed mt-20 md:mt-32 flex flex-col md:flex-row items-center gap-16 md:gap-32">
  
  <!-- Image section for mobile and desktop with responsive sizing -->
  <div class="w-full md:w-6/12 lg:w-5/12 flex justify-center md:justify-end mb-8 md:mb-0 rounded shadow-md drop-shadow-[-35px_0px_35px_rgba(75,0,130,0.6)]">
    <img src={imgSrc} alt={imgAlt} class="w-full md:w-96 lg:w-[450px] object-contain rounded-lg md:p-0">
  </div>
  
  <!-- Text section on the right -->
  <div class="w-full md:w-6/12 lg:w-7/12 text-center md:text-left">
    <p class="mb-8 text-5xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-500">
      {title}
    </p>

    <p class="text-xl md:text-2xl mt-8">
      {introText}
    </p>
    
    <p class="text-xl md:text-2xl mt-8">
      {secondText}
    </p>
  </div>
</div>